html
  padding 0
  height 100%

body 
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  height 100%
  padding 0
  margin 0  

  a 
    color #00B7FF

  header
    position absolute
    width 100%
    text-align center 

  #outer
    overflow hidden
    height 100%
    .choices 
      width 50%   
      float left
      height 100%
      padding-top 400px
      text-align center


  footer
    height 20px
    background #232323
    width 96%
    padding 2%
    display block
    position fixed
    bottom 0
    div.tweet
      color #ffffff
      width 70%
      float left
      span
        display inline
        margin-right 10px
        &:after
          content ":"
      p
        display inline
        margin 0
    a
      float right



